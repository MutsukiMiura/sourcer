{
  "name": "sourcer",
  "version": "1.0.0",
  "scripts": {
    "prebuild:common:tsc": "npm run lint",
    "build:common:tsc": "tsc",
    "build:common:resource:html": "cpx \"./src/**/*.html\" ./out",
    "build:common:resource": "npm-run-all -p build:common:resource:*",
    "build:common": "npm-run-all -p build:common:*",
    "build:client:statics": "cpx \"./src/statics/**/*.*\" ./dist",
    "build:client:css": "postcss \"src/**/*.css\" -o ./dist/main.css",
    "build:client:bundle:main": "browserify ./out/main/client/main.js -o ./dist/main.js",
    "build:client:bundle:arena": "browserify ./out/main/client/arena.js -o ./dist/arena.js",
    "build:client:bundle:arenaWorker": "browserify ./out/main/client/arenaWorker.js -o ./dist/arenaWorker.js",
    "build:client:bundle": "npm-run-all -p build:client:bundle:*",
    "build:client": "npm-run-all -p build:client:*",
    "build": "npm-run-all -s build:common build:client",
    "pretest": "npm run build:common",
    "test": "cross-env NODE_ENV=test mocha --bail out/test/**/*.spec.js",
    "cover": "nyc npm test",
    "lint": "tslint -c tslint.json 'src/main/**/*.ts' 'src/test/**/*.ts'",
    "prestart": "npm run build",
    "start": "node out/main/server/index.js",
    "predebug": "npm run build",
    "debug": "node  --inspect --debug-brk out/main/server/index.js",
    "clean": "rimraf out coverage dist"
  },
  "author": "benishouga",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.2",
    "connect-mongo": "^2.0.0",
    "cookie-parser": "^1.4.3",
    "express": "^4.16.1",
    "express-session": "^1.15.6",
    "moment": "^2.19.1",
    "mongoose": "^4.12.2",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-mdl": "^1.10.3",
    "react-router-dom": "^4.2.2",
    "superagent": "^3.6.3",
    "vm2": "^3.5.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.5",
    "@types/connect-mongo": "0.0.34",
    "@types/cookie-parser": "^1.4.1",
    "@types/express": "^4.0.37",
    "@types/express-session": "^1.15.3",
    "@types/mocha": "^2.2.41",
    "@types/mongodb": "^2.2.11",
    "@types/mongoose": "^4.7.21",
    "@types/node": "^7.0.29",
    "@types/react": "^16.0.10",
    "@types/react-dom": "^16.0.1",
    "@types/react-mdl": "file:src\\libs\\react-mdl",
    "@types/react-router-dom": "^4.0.8",
    "@types/superagent": "^3.5.6",
    "autoprefixer": "^7.1.4",
    "browserify": "^14.4.0",
    "browserify-shim": "^3.8.14",
    "cpx": "^1.5.0",
    "cross-env": "^5.0.5",
    "css-mqpacker": "^6.0.1",
    "mocha": "^3.4.2",
    "npm-run-all": "^4.1.1",
    "nyc": "^11.0.2",
    "postcss-cli": "^4.1.1",
    "rimraf": "^2.6.1",
    "ts-node": "^3.3.0",
    "tslint": "^5.4.3",
    "tslint-config-airbnb": "^5.2.1",
    "typescript": "^2.5.2"
  },
  "nyc": {
    "include": [
      "out/**/*.js"
    ],
    "exclude": [
      "src/test/**/*.ts"
    ],
    "extension": [
      ".js",
      ".ts"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "all": true
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browserify-shim": {
    "ace": "global:ace"
  }
}
