{
  "name": "sourcer",
  "version": "1.0.0",
  "scripts": {
    "prebuild:common:tsc": "npm run lint",
    "build:common:tsc": "tsc",
    "build:common:resource:html": "cpx \"./src/**/*.html\" ./out",
    "build:common:resource": "npm-run-all -p build:common:resource:*",
    "build:common": "npm-run-all -p build:common:*",
    "build:client:statics": "cpx \"./src/statics/**/*.*\" ./docs",
    "build:client:css": "postcss \"src/css/main.css\" -o ./docs/main.css",
    "build:client:bundle:main": "browserify ./src/main/client/main.tsx -p [ tsify --noImplicitAny ] | uglifyjs -c > ./docs/main.js",
    "build:client:bundle:arena": "browserify ./src/main/client/standalone.tsx -p [ tsify --noImplicitAny ] | uglifyjs -c > ./docs/standalone.js",
    "build:client:bundle:arenaWorker": "browserify ./src/main/client/arenaWorker.ts -p [ tsify --noImplicitAny ] | uglifyjs -c > ./docs/arenaWorker.js",
    "build:client:bundle": "npm-run-all -p build:client:bundle:*",
    "prebuild:client": "mkdirp ./docs",
    "build:client": "npm-run-all -p build:client:*",
    "build": "npm-run-all -s build:common build:client",
    "build:debug:client:statics": "cpx \"./src/statics/**/*.*\" ./docs",
    "build:debug:client:css": "postcss \"src/css/main.css\" -o ./docs/main.css",
    "build:debug:client:bundle:main": "browserify ./src/main/client/main.tsx --debug -p [ tsify --noImplicitAny ] -o ./docs/main.js",
    "build:debug:client:bundle:arena": "browserify ./src/main/client/standalone.tsx --debug -p [ tsify --noImplicitAny ] -o ./docs/standalone.js",
    "build:debug:client:bundle:arenaWorker": "browserify ./src/main/client/arenaWorker.ts --debug -p [ tsify --noImplicitAny ] -o ./docs/arenaWorker.js",
    "build:debug:client:bundle": "npm-run-all -p build:debug:client:bundle:*",
    "prebuild:debug:client": "mkdirp ./docs",
    "build:debug:client": "npm-run-all -p build:debug:client:*",
    "build:debug": "npm-run-all -s build:common build:debug:client",
    "postinstall": "npm run build",
    "pretest": "npm run build:common",
    "test": "cross-env NODE_ENV=test mocha --bail out/test/**/*.spec.js",
    "cover": "nyc npm test",
    "format": "prettier --parser typescript --write --single-quote  \"./src/**/*.ts\" \"./src/**/*.tsx\"",
    "lint": "tslint -c tslint.json 'src/main/**/*.ts' 'src/main/**/*.tsx' 'src/test/**/*.ts'",
    "prestart:debug": "npm run build:debug",
    "start:debug": "npm run app",
    "prestart": "npm run build",
    "start": "npm run app",
    "app": "node out/main/server/index.js",
    "predebug": "npm run build",
    "debug": "node --inspect --debug-brk out/main/server/index.js",
    "clean": "rimraf out coverage docs",
    "precommit": "lint-staged"
  },
  "author": "benishouga",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.18.2",
    "connect-mongo": "^2.0.0",
    "cookie-parser": "^1.4.3",
    "express": "^4.16.2",
    "express-session": "^1.15.6",
    "moment": "^2.19.1",
    "mongoose": "^4.13.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-mdl": "^1.10.3",
    "react-router-dom": "^4.2.2",
    "superagent": "^3.8.0",
    "vm2": "^3.5.2"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.7",
    "@types/connect-mongo": "0.0.34",
    "@types/cookie-parser": "^1.4.1",
    "@types/express": "^4.0.39",
    "@types/express-session": "^1.15.5",
    "@types/mocha": "^2.2.44",
    "@types/mongodb": "^2.2.15",
    "@types/mongoose": "^4.7.24",
    "@types/node": "^8.0.47",
    "@types/react": "^16.0.19",
    "@types/react-dom": "^16.0.2",
    "@types/react-mdl": "^1.7.25",
    "@types/react-router-dom": "^4.2.0",
    "@types/superagent": "^3.5.6",
    "autoprefixer": "^7.1.6",
    "browserify": "^14.5.0",
    "browserify-shim": "^3.8.14",
    "cpx": "^1.5.0",
    "cross-env": "^5.1.1",
    "css-mqpacker": "^6.0.1",
    "husky": "^0.14.3",
    "lint-staged": "^6.0.0",
    "mkdirp": "^0.5.1",
    "mocha": "^4.0.1",
    "npm-run-all": "^4.1.1",
    "nyc": "^11.3.0",
    "postcss-cli": "^4.1.1",
    "prettier": "1.9.1",
    "rimraf": "^2.6.2",
    "tsify": "^3.0.3",
    "tslint": "^5.8.0",
    "tslint-config-airbnb": "^5.3.0",
    "tslint-config-prettier": "^1.6.0",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.6.2",
    "uglify-js": "^3.3.8"
  },
  "nyc": {
    "include": [
      "out/**/*.js"
    ],
    "exclude": [
      "src/test/**/*.ts"
    ],
    "extension": [
      ".js",
      ".ts"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "all": true
  },
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --parser typescript --write",
      "git add"
    ],
    "src/**/*.tsx": [
      "prettier --parser typescript --write",
      "git add"
    ]
  },
  "browserify": {
    "transform": [
      "browserify-shim"
    ]
  },
  "browserify-shim": {
    "ace": "global:ace"
  }
}
